<% id = curation_concern.id %>
<% title = curation_concern.title.first %>
<p>
  <%= t('simple_form.hints.data_set.globus_is_currently_downloading_submit_email_address',
        title: curation_concern.title.first ) %>
</p>
<%= form_tag(main_app.globus_add_email_hyrax_data_set_path(@curation_concern.id), method: 'post') do %>
  <%= render partial: 'data_set/globus_email_form_text_fields' %>
  <%= submit_tag(t('simple_form.actions.data_set.globus_add_email'), class: 'btn btn-primary') %>
  <%= link_to t(:'helpers.action.cancel'), polymorphic_path([main_app, curation_concern]), class: 'btn btn-link cancel-btn' %>
<% end %>