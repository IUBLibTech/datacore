<p>
  <%= t( 'simple_form.hints.data_set.globus_click_submit_to_start_downloading',
         title: curation_concern.title.first ) %>
</p>
<%= form_tag(main_app.globus_download_notify_me_hyrax_data_set_path(@curation_concern.id), method: 'post') do %>
  <%= render partial: 'data_set/globus_email_form_text_fields' %>
  <%= submit_tag(t('simple_form.actions.data_set.globus_download_and_notify_me'), class: 'btn btn-primary') %>
  <%= link_to t('simple_form.actions.data_set.globus_download_dont_notify_me'),
              polymorphic_path([main_app, curation_concern]),
              class: 'btn btn-link' %>
<% end %>