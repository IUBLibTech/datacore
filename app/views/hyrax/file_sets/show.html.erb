<% provide :page_title, @presenter.page_title %>
<% if @presenter.parent %>
  <% contents_hidden = ( !@presenter.parent.tombstone.present? && @presenter.parent.workflow.state != "deposited" && !can?(:edit, @presenter.id) ) %>
<% end %>
<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-sm-4">
      <% if contents_hidden %>
        &nbsp;
      <% else %>
        <%= media_display @presenter %>
        <%= render 'show_actions', presenter: @presenter %>
        <%#= render 'single_use_links', presenter: @presenter if @presenter.editor? %>
      <% end %>
    </div>

<% if @presenter.parent %>
<%  if @presenter.parent.respond_to? :itemtype %>
<%    unless @presenter.parent.itemtype == "http://schema.org/Dataset" %>
<%      itemtype = "http://schema.org/CreativeWork" %>
<%    else %>
<%      itemtype = "http://schema.org/Dataset" %>
<%    end %>
<%  end %>
<% end %>

    <div itemscope itemtype="<%= itemtype %>" class="col-xs-12 col-sm-8">
      <header>
        <%= render 'file_set_title', presenter: @presenter %>
      </header>

      <% if contents_hidden %>
        &nbsp;
      <% else %>
        <%# TODO: render 'show_descriptions' See https://github.com/samvera/hyrax/issues/1481 %>
        <%# FIXME: hide details if archive_file? %>
        <%= render 'show_details' %>
        <% if @presenter.archive_file? %>
          <strong>Archival file status:</strong> <%= @presenter.archive_file&.display_status %>
          <form action="<%= @presenter.archive_request_url %>" method="get">
            <input type="submit" name='request' value="<%= @presenter.request_action %>" <%= 'disabled' unless @presenter.request_actionable? %> class="btn btn-primary">
          </form>
          <% unless @presenter.request_actionable? %>
            Refresh this page to check for updated download availability
          <% end %>
        <% end %>
        <%= render 'hyrax/users/activity_log', events: @presenter.events %>
        <%= render '/provenance_log_entries', presenter: @presenter %>
      <% end %>
    </div><!-- /columns second -->
  </div> <!-- /.row -->
</div><!-- /.container-fluid -->
