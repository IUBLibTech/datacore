<div class="col-xs-12 featured-works--home">
  <h2>Resources</h2>
  <ul id="homeTabs" role="tablist" class="nav nav-pills">
    <li class="active" role="presentation"><a href="#links_container" data-toggle="tab" role="tab" id="linksTab"><%= t('hyrax.homepage.featured_links.tab_label') %></a></li>
    <li role="presentation"><a href="#featured_container" data-toggle="tab" role="tab" id="featureTab"><%= t('hyrax.homepage.featured_works.tab_label') %></a></li>
    <li role="presentation"><a href="#recently_uploaded" data-toggle="tab" role="tab" id="recentTab"><%= t('hyrax.homepage.recently_uploaded.tab_label') %></a></li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane fade in active" id="links_container" role="tabpanel" aria-labelledby="linksTab">
      <%= render 'featured_links' %>
    </div>
    <div class="tab-pane fade" id="featured_container" role="tabpanel" aria-labelledby="featureTab">
      <%= render 'featured_works' %>
    </div>
    <div class="tab-pane fade" id="recently_uploaded" role="tabpanel" aria-labelledby="recentTab">
      <%= render 'recently_uploaded', recent_documents: @recent_documents %>
    </div>
  </div>
  <hr style="margin-top: 80px"/>
  <div>
    <p>For IU Indianapolis research data repository services, visit <a href="https://dataworks.indianapolis.iu.edu/" target="_blank">DataWorks</a>.
  </div>
</div>
